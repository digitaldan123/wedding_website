
<% flash.each do |name, msg| %>
  <div class="section alert alert-<%= name == 'notice' ? "info" : "danger" %> fade in">
    <button class="close" data-dismiss="alert">
      x
    </button>
    <i class="fa-fw fa fa-info"></i>
    <strong><Info><%= name %>!</strong> <%= raw(msg) %>
</div>
<% end %>

<div class="container">
  <div class="section row">
    <div class="col-md-4 pull-left">
      <h3>Members of Party:</h3>
      <p>Use the drop down to RSVP for each member in your party.</p>
      <%= select_tag "guest_edit_select", options_from_collection_for_select(@guests, "id", "name", @guest.id) %>
      <% if @group.num_of_guests_allowed > 0 %>
        <br><br><br>
        <%= link_to "Add a new guest not listed", guest_new_path, :class => "btn btn-primary btn-md" %>
      <% end %>
      <br><br><br>
      <%= link_to "Logout", guest_logout_path, :class => "btn btn-primary btn-md" %>
      <br><br><br>
    </div>
    <div class="col-md-8 pull-right">
      <div class="well well-sm">
        <%= render 'form', guest: @guest, group: @group, url: guest_update_path, submit_name: "Update" %>
      </div> <!-- end well well -->
    </div> <!-- end column -->
  </div> <!-- end row -->
</div> <!-- end continer -->



